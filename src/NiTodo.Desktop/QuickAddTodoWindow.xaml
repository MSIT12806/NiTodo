<Window x:Class="NiTodo.Desktop.QuickAddTodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="快速新增待辦" WindowState="Maximized" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" ShowInTaskbar="False" Topmost="True" AllowsTransparency="True" Background="#80000080">
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="White" CornerRadius="12" Padding="24" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="TodoInput" Grid.Row="0" Margin="0,0,0,16" Height="30"
FontSize="14" Width="240" KeyDown="NewTodoTextBox_KeyDown" />
                    <Button x:Name="SubmitButton" Grid.Row="1" Content="送出" Height="36" Width="100" HorizontalAlignment="Right" Click="SubmitButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
