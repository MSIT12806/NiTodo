<Window x:Class="NiTodo.Desktop.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NiToDo" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NiTodo.Desktop"
        Width="400" Height="300"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="White"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="Height"
        MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8">
        <Grid>
            <!-- 自訂標題列 -->
            <Grid Background="LightGray" Height="40" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 左邊是 App 名稱 -->
                <TextBlock Text="NiToDo" FontSize="16" Margin="10,0" VerticalAlignment="Center" Grid.Column="0"  />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0" Grid.Column="1">
                    <!-- 調整透明度 -->
                    <Slider Width="100" Minimum="0.2" Maximum="1.0" Value="1.0"
                            ValueChanged="OpacitySlider_ValueChanged"
                            VerticalAlignment="Center" Margin="0,0,10,0" />
                    <!-- 控制懸浮 -->
                    <CheckBox Content="" VerticalAlignment="Center"
                              Checked="TopmostCheckBox_Checked"
                              Unchecked="TopmostCheckBox_Unchecked" />
                    <!-- 最右邊縮小/關閉按鈕 -->
                    <Button Content="—" Width="30" Click="Minimize_Click" />
                    <Button Content="X" Width="30" Click="Close_Click" />
                </StackPanel>

            </Grid>
            <Grid Margin="10,50,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- 篩選列與排序列分開：左=篩選 右=排序 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 篩選區 (Tag 動態加入) -->
                    <WrapPanel x:Name="FilterPanel" Grid.Column="0">
                        <CheckBox Content="已完成" x:Name="ShowCompletedCheckBox" Checked="ShowCompletedCheckBox_Changed" Unchecked="ShowCompletedCheckBox_Changed" Margin="5,0"/>
                        <CheckBox Content="今天" x:Name="ShowTodayCheckBox" Checked="ShowTodayCheckBox_Changed" Unchecked="ShowTodayCheckBox_Changed" Margin="5,0"/>
                        <!-- Tag checkboxes 將由程式碼動態加入 -->
                    </WrapPanel>

                    <!-- 排序區 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                        <TextBlock Text="排序:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <ComboBox x:Name="SortComboBox" Width="110" SelectionChanged="SortComboBox_SelectionChanged">
                            <ComboBoxItem Content="文字" Tag="Content" IsSelected="True"/>
                            <ComboBoxItem Content="建立日期" Tag="Created"/>
                            <ComboBoxItem Content="預計時間" Tag="Planned"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
                <!-- 輸入區 -->
                <DockPanel Grid.Row="1" LastChildFill="True" Margin="0,0,0,10">
                    <TextBox x:Name="NewTodoTextBox"
                 Width="300"
                 VerticalAlignment="Center"
                 Margin="0,0,10,0"
                 Height="30"
                 FontSize="14"
                 Text=""
                 Tag="新增代辦事項"
                 GotFocus="NewTodoTextBox_GotFocus"
                 LostFocus="NewTodoTextBox_LostFocus"
                             KeyDown="NewTodoTextBox_KeyDown"/>
                    <Button Content="新增"
                Width="60"
                Height="30"
                Click="AddTodoButton_Click" />
                </DockPanel>
                <ScrollViewer  Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0" MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}">
                    <!-- 使用垂直 StackPanel，單筆內容改由 Grid 限制寬度並在程式碼側 TextWrapping -->
                    <StackPanel x:Name="TodoListPanel" Margin="0,0,0,0">
                        <!-- 待辦清單動態加入 -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>
    </Border>
</Window>
