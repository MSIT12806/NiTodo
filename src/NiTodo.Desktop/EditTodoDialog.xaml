<Window x:Class="NiTodo.Desktop.EditTodoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="編輯待辦" Width="300" Height="150" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBox x:Name="EditTextBox" Margin="0,0,0,10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="確定" Width="60" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="取消" Width="60" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
